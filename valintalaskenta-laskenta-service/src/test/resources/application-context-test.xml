<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <context:annotation-config/>
    <!--
    	Sulautetun Mongo-kannan pystyyn viritt채minen testej채 varten 
     -->
    <context:property-placeholder properties-ref="embeddedMongoProps"/>
	<util:properties id="embeddedMongoProps">
		<prop key="mongodb.host">localhost</prop>
		<prop key="mongodb.port">33720</prop>
	</util:properties>
	<bean id="embeddedMongoDBConfiguration" class="fi.vm.sade.valintalaskenta.laskenta.service.EmbeddedMongoConfiguration"/>
	<context:component-scan base-package="fi.vm.sade.valintalaskenta.laskenta.context"/>
	<!--
		Tehdasluokat testidatan generointiin. Tehdasluokat toimii suoraan kontekstista nykim채ll채 context.getBean('TestObjectNeededToBeCreated'.class) 
	 -->
	<context:component-scan base-package="fi.vm.sade.valintalaskenta.laskenta.testdata"/>
	
    <import resource="spring/application-context-service.xml" />
    
</beans>